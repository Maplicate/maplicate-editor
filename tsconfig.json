{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "fs": ["./shims/noop"],
      "stream": ["./shims/stream"],
      "crypto": ["./shims/crypto"],
      "os": ["./shims/noop"],
      "path": ["./shims/path"],
      "vm": ["./shims/noop"]
    }
  }
}
